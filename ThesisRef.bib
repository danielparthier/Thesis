  pages = {416-423},
  pmid = {9744426}
}

@article{m_regional_1993,
  title = {Regional and Laminar Organization of Projections from the Presubiculum and Parasubiculum to the Entorhinal Cortex: An Anterograde Tracing Study in the Rat.},
