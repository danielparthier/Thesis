	urldate = {2019-10-27},
	journal = {Frontiers in Computational Neuroscience},
	author = {O'Brien, Michael J. and Thibeault, Corey M. and Srinivasa, Narayan},
	month = nov,
	year = {2014},
}

@article{nunzi_differential_2002,
	title = {Differential expression of calretinin and metabotropic glutamate receptor {mGluR1}? defines subsets of unipolar brush cells in mouse cerebellum},
	volume = {451},
	issn = {0021-9967, 1096-9861},
	shorttitle = {Differential expression of calretinin and metabotropic glutamate receptor {mGluR1}?},
