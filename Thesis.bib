	journal = {Frontiers in Neuroinformatics},
	author = {Rueckl, Martin and Lenzi, Stephen C. and Moreno-Velasquez, Laura and Parthier, Daniel and Schmitz, Dietmar and Ruediger, Sten and Johenning, Friedrich W.},
