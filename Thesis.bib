	file = {Springer Full Text PDF:/home/daniel/Zotero/storage/TAX4QKMX/Andersen et al. - 1971 - Lamellar organization of hippocampal excitatory pa.pdf:application/pdf},
}

@article{caballero-bleda_regional_1993,
