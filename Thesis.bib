	journal = {Frontiers in Neuroanatomy},
	author = {Muralidhar, Shruti and Wang, Yun and Markram, Henry},
	year = {2014},
	pages = {52},
	file = {Full Text PDF:/home/daniel/Zotero/storage/PGCWQNXD/Muralidhar et al. - 2014 - Synaptic and cellular organization of layer 1 of t.pdf:application/pdf},
}

@article{wozny_specificity_2011,
	title = {Specificity of {Synaptic} {Connectivity} between {Layer} 1 {Inhibitory} {Interneurons} and {Layer} 2/3 {Pyramidal} {Neurons} in the {Rat} {Neocortex}},
	volume = {21},
