@article{hasselmo_proposed_2002,
	title = {A {Proposed} {Function} for {Hippocampal} {Theta} {Rhythm}: {Separate} {Phases} of {Encoding} and {Retrieval} {Enhance} {Reversal} of {Prior} {Learning}},
