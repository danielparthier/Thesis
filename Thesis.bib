@article{aschauer_analysis_2013,
	title = {Analysis of {Transduction} {Efficiency}, {Tropism} and {Axonal} {Transport} of {AAV} {Serotypes} 1, 2, 5, 6, 8 and 9 in the {Mouse} {Brain}},
