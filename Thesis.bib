	file = {Snapshot:/home/daniel/Zotero/storage/DA8XWSFE/279.html:text/html;Full Text PDF:/home/daniel/Zotero/storage/QFZFN6Z5/Jensen and Lisman - 1996 - Hippocampal CA3 region predicts memory sequences .pdf:application/pdf},
