	urldate = {2021-09-15},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Allen, Timothy A. and Fortin, Norbert J.},
	month = jun,
	year = {2013},
	pmid = {23754432},
	keywords = {entorhinal cortex, hippocampus, prefrontal cortex, parahippocampal region, animal models},
