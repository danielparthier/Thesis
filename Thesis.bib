	pmid = {30804092},
	keywords = {entorhinal cortex, medial septum, path integration, speed cells, speed signal},
	pages = {3434--3453},
	file = {Snapshot:/home/daniel/Zotero/storage/YCQIBWDW/3434.html:text/html;Full Text PDF:/home/daniel/Zotero/storage/MJ8JHU5M/Dannenberg et al. - 2019 - The Firing Rate Speed Code of Entorhinal Speed Cel.pdf:application/pdf},
}

@article{zutshi_hippocampal_2018,
	title = {Hippocampal {Neural} {Circuits} {Respond} to {Optogenetic} {Pacing} of {Theta} {Frequencies} by {Generating} {Accelerated} {Oscillation} {Frequencies}},
